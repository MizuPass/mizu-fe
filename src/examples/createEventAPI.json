{
  "createEvent": {
    "endpoint": "POST /api/events",
    "description": "Create a new event in the MizuPass platform",
    "requestBody": {
      "title": "Shibuya Esports Cup",
      "category": "Gaming",
      "description": "Ultimate gaming tournament with prize pools and exclusive NFT rewards. Anonymous entry guaranteed.",
      "price": "¥2,800 MJPY",
      "priceAmountMJPY": 2800,
      "maxParticipants": 200,
      "location": "Virtual Arena",
      "date": "March 28, 2025",
      "startDateTime": "2025-03-28T19:00:00Z",
      "endDateTime": "2025-03-28T23:00:00Z",
      "timezone": "Asia/Tokyo",
      "mizuIcon": "/mizuIcons/mizu-success.svg",
      "bgColor": "white",
      "eventImage": "/events/jicaf.avif",
      "status": "available",
      "isPrivate": false,
      "requiresKYC": false,
      "tags": ["gaming", "tournament", "nft", "anonymous"],
      "socialLinks": {
        "website": "https://shibuya-esports.com",
        "twitter": "@shibuya_esports",
        "discord": "discord.gg/shibuya"
      },
      "enableAnalytics": true,
      "refundPolicy": "partial",
      "enableResale": true,
      "maxResalePrice": 1.5,
      "royaltyPercentage": 5
    },
    "responseSuccess": {
      "success": true,
      "eventId": 123,
      "message": "Event created successfully",
      "event": {
        "id": 123,
        "title": "Shibuya Esports Cup",
        "category": "Gaming",
        "price": "¥2,800 MJPY",
        "location": "Virtual Arena",
        "date": "March 28, 2025",
        "description": "Ultimate gaming tournament with prize pools and exclusive NFT rewards. Anonymous entry guaranteed.",
        "participants": 0,
        "maxParticipants": 200,
        "status": "available",
        "mizuIcon": "/mizuIcons/mizu-success.svg",
        "bgColor": "white",
        "eventImage": "/events/jicaf.avif",
        "organizerAddress": "0x1234567890123456789012345678901234567890",
        "createdAt": "2025-01-14T10:30:00Z",
        "updatedAt": "2025-01-14T10:30:00Z"
      }
    },
    "responseError": {
      "success": false,
      "eventId": null,
      "message": "Validation failed",
      "errors": [
        "Title is required",
        "Price must be greater than 0",
        "Max participants must be at least 1"
      ]
    }
  },
  "fieldValidations": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 200,
      "description": "Event title displayed to users"
    },
    "category": {
      "type": "string",
      "required": true,
      "allowedValues": ["Gaming", "Loyalty", "Exclusive", "Concert", "Conference", "Workshop", "Festival", "Sports"],
      "description": "Event category for filtering and display"
    },
    "description": {
      "type": "string",
      "required": true,
      "maxLength": 1000,
      "description": "Detailed event description"
    },
    "priceAmountMJPY": {
      "type": "number",
      "required": true,
      "minimum": 0,
      "description": "Price in MJPY tokens (numeric value for calculations)"
    },
    "maxParticipants": {
      "type": "number",
      "required": true,
      "minimum": 1,
      "maximum": 10000,
      "description": "Maximum number of participants allowed"
    },
    "startDateTime": {
      "type": "string",
      "format": "ISO 8601",
      "required": false,
      "description": "Event start time in UTC"
    },
    "status": {
      "type": "string",
      "required": true,
      "allowedValues": ["available", "upcoming", "draft"],
      "description": "Initial event status (sold-out is calculated automatically)"
    }
  },
  "authentication": {
    "required": true,
    "method": "Bearer token",
    "description": "User must be authenticated and have EVENT_CREATOR role",
    "headers": {
      "Authorization": "Bearer <jwt_token>",
      "Content-Type": "application/json"
    }
  },
  "businessLogic": {
    "notes": [
      "Event ID is auto-generated by backend",
      "Participants count starts at 0",
      "Status changes to 'sold-out' when participants >= maxParticipants",
      "Organizer address/ID extracted from authenticated user",
      "Event images should be uploaded separately and path provided",
      "All monetary calculations use priceAmountMJPY (numeric) not price (display string)",
      "Tags are optional but help with search and categorization",
      "Social links are optional but improve event discoverability"
    ]
  }
}